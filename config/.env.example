# EZIO Financial AI - Environment Configuration
# Copy this file to .env and fill with your values

# Hugging Face Token (Optional - for accessing private models)
HUGGINGFACE_TOKEN=your_huggingface_token_here
HF_TOKEN=your_huggingface_token_here
HUGGING_FACE_HUB_TOKEN=your_huggingface_token_here

# OpenAI API Key (Optional - for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Yahoo Finance (Free - no key needed)
YFINANCE_ENABLED=true

# Cache Settings
CACHE_ENABLED=true
CACHE_EXPIRY_HOURS=24

# Expert System Settings
ENABLE_ALL_EXPERTS=true
DEBUG_MODE=false

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# GitHub Codespaces Detection
CODESPACES=true